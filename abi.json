// Initialize Web3 instance and connect to Binance Smart Chain (BSC)
const web3 = new Web3(Web3.givenProvider || "https://bsc-dataseed.binance.org/");

// Contract ABI (Replace this with your actual ABI)
const contractABI = [
    //... Your ABI array here
];

// Contract address (Replace this with your actual deployed contract address)
const contractAddress = '0xYourContractAddress';

// Create contract instance
const contract = new web3.eth.Contract(contractABI, contractAddress);

// Function to connect wallet
const connectWallet = async () => {
    if (window.ethereum) {
        try {
            // Request account access
            const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
            console.log('Connected account:', accounts[0]);
            return accounts[0];
        } catch (error) {
            console.error('User rejected the request:', error);
        }
    } else {
        console.error('No Ethereum provider detected. Install MetaMask or another provider.');
    }
};

// Function to invest in the contract
const invest = async (amountInEther, referrer) => {
    const account = await connectWallet();
    const amountInWei = web3.utils.toWei(amountInEther, 'ether');

    try {
        const result = await contract.methods.invest(referrer).send({
            from: account,
            value: amountInWei,
        });

        console.log('Investment successful:', result);
    } catch (error) {
        console.error('Investment failed:', error);
    }
};

// Function to withdraw dividends
const withdraw = async () => {
    const account = await connectWallet();

    try {
        const result = await contract.methods.withdraw().send({
            from: account,
        });

        console.log('Withdrawal successful:', result);
    } catch (error) {
        console.error('Withdrawal failed:', error);
    }
};

// Function to get contract balance
const getContractBalance = async () => {
    try {
        const balance = await contract.methods.getContractBalance().call();
        console.log('Contract balance:', web3.utils.fromWei(balance, 'ether'), 'BNB');
    } catch (error) {
        console.error('Failed to get contract balance:', error);
    }
};

// Function to get user information
const getUserInfo = async () => {
    const account = await connectWallet();

    try {
        const userInfo = await contract.methods.getUserInfo(account).call();
        console.log('User Info:', {
            available: web3.utils.fromWei(userInfo[0], 'ether'),
            totalDeposits: web3.utils.fromWei(userInfo[1], 'ether'),
            totalWithdrawn: web3.utils.fromWei(userInfo[2], 'ether'),
        });
    } catch (error) {
        console.error('Failed to get user info:', error);
    }
};

// Example usage:
// Connect wallet and interact with contract
const main = async () => {
    await connectWallet();
    await invest('0.1', '0xReferrerAddress'); // Replace with actual referrer address
    await withdraw();
    await getContractBalance();
    await getUserInfo();
};

main();
